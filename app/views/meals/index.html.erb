<div id="Meal Selection">
  <h1>Welcome to Restaurants on Rails</h1>
  <br>
  <h5>Browse our selection of restaurants!</h5>
</div>

<div>
  
</div>

<div class="row">
  <% @meals.each do |meal| %>
    <div class="col-md-4">
      <div class="card">
        <% if meal.image.attached? %>
          <%= image_tag(meal.image , class: "card-img-top") %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= meal.name %></h5>
          <p class="card-text"><%= meal.price_format %></p>
          <%= link_to("View Menu!", "/meals/#{meal.id}", class: "btn btn-primary") %>
        </div>
    </div>
  <% end %>
</div>