<div class="signup">  
  <h2>Sign up Restaurant</h2>
</div>

<div class="signup_restaurant">
  <%= form_for(:restaurant, url: "/restaurants") do |f| %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    <%= f.submit 'Restaurant Sign Up' %>
  <% end %>  
</div>

  <%#= render "restaurants/shared/links" %>
</div class= "signup_customer">
  <%= form_for(:customer, url: "/customers") do |f| %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    <%= f.submit 'Customer Sign Up' %>
  <% end %>
</div>


  <%#= render "customers/shared/links" %>
