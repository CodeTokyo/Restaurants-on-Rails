<div class="signup">  
  <h2>Sign up</h2>
</div>

<div class="signup_restaurant">
  <%= form_for(:restaurant, url: "/restaurants") do |f| %>
  <br>
    <%= f.label :Email %>
    <%= f.text_field :email %>
  <br>
    <%= f.label :Password %>
    <%= f.password_field :password %>
  <br>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone-number" %>
  <br>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  <br>
    <%= f.submit 'Restaurant Sign Up' %>
  <% end %>  
</div>

  <%#= render "restaurants/shared/links" %>
