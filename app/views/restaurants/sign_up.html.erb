    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone-number" %>
    <br>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
